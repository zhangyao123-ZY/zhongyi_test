<!--pages/login/login.wxml-->
<page class="full-page login-page">
  <text class="title">登录</text>

  <view class="form">
    <van-field
      model:value="{{ appid }}"
      placeholder="请输入 appid"
      label="appid："
      error-message="{{ appidError }}"
    />
    <van-field
      model:value="{{ appkey }}"
      placeholder="请输入 key"
      label="key："
      error-message="{{ appkeyError }}"
    />
  </view>

  <van-button class="login-btn" round block type="info" bind:click="login">登录</van-button>

</page>
